
class Node:
    def __init__(self, elem, next=None):
        self.data = elem      
        self.link = next       
    def append(self, new):
        # self 다음에 new 노드를 삽입
        if new is not None:
            new.link = self.link
            self.link = new

    def popNext(self):
        # self 다음 노드를 삭제하고 반환
        deleted = self.link
        if deleted is not None:
            self.link = deleted.link
        return deleted
class Book:
    def __init__(self, book_id, title, author, year):
        self.id = book_id
        self.title = title
        self.author = author
        self.year = year

    def __str__(self):
        return f"[{self.id}] {self.title} / {self.author} / {self.year}"
class LinkedList:
    def __init__(self):
        self.head = None

    def isEmpty(self):
        return self.head is None
    def append(self, elem):
        new = Node(elem)
        if self.isEmpty():
            self.head = new
            return
        
        ptr = self.head
        while ptr.link is not None:
            ptr = ptr.link
        ptr.link = new

    def delete_at(self, pos):
        if self.isEmpty():
            return None
        if pos < 0:
            return None
        if pos == 0:
            deleted = self.head
            self.head = deleted.link
            return deleted
        before = self.head
        for _ in range(pos - 1):
            if before is None:
                return None
            before = before.link
        
        if before is None:
            return None

        return before.popNext()

    def find_by_title(self, title):
        # title에 해당하는 Book 객체 반환
        ptr = self.head
        while ptr is not None:
            if ptr.data.title == title:
                return ptr.data
            ptr = ptr.link
        return None

    def find_pos_by_title(self, title):
        # title에 해당하는 노드의 위치 반환
        pos = 0
        ptr = self.head
        while ptr is not None:
            if ptr.data.title == title:
                return pos
            ptr = ptr.link
            pos += 1
        return -1

    def exists_id(self, book_id):
        # 해당 book_id 존재하는지 확인
        ptr = self.head
        while ptr is not None:
            if ptr.data.id == book_id:
                return True
            ptr = ptr.link
        return False

    def display_all(self):
        if self.isEmpty():
            print("현재 등록된 도서가 없습니다.")
            return

        ptr = self.head
        while ptr is not None:
            print(ptr.data)
            ptr = ptr.link
class BookManagement:
    def __init__(self):
        self.books = LinkedList()
    def add_book(self, book_id, title, author, year):
        if self.books.exists_id(book_id):
            print("오류: 동일한 책 번호가 이미 존재합니다.")
            return
        
        new_book = Book(book_id, title, author, year)
        self.books.append(new_book)
        print("도서가 성공적으로 추가되었습니다.")
    def remove_book(self, title):
        pos = self.books.find_pos_by_title(title)
        if pos == -1:
            print("오류: 해당 제목의 도서가 존재하지 않습니다.")
            return
        
        deleted = self.books.delete_at(pos)
        print(f"삭제 완료: {deleted.data}")

    def search_book(self, title):
        book = self.books.find_by_title(title)
        if book is None:
            print("오류: 해당 제목의 도서를 찾을 수 없습니다.")
        else:
            print("도서 정보:")
            print(book)

    def display_books(self):
        print("\n=== 전체 도서 목록 ===")
        self.books.display_all()
    def run(self):
        while True:
            print("\n===== 도서 관리 프로그램 =====")
            print("1. 도서 추가")
            print("2. 도서 삭제 (책 제목)")
            print("3. 도서 조회 (책 제목)")
            print("4. 전체 도서 목록 출력")
            print("5. 프로그램 종료")
            
            try:
                choice = int(input("메뉴 선택: "))
            except:
                print("잘못된 입력입니다. 숫자를 입력하세요.")
                continue

            if choice == 1:
                try:
                    book_id = int(input("책 번호: "))
                    title = input("책 제목: ")
                    author = input("저자: ")
                    year = int(input("출판 연도: "))
                except:
                    print("입력 오류: 다시 시도하세요.")
                    continue
                self.add_book(book_id, title, author, year)

            elif choice == 2:
                title = input("삭제할 책 제목: ")
                self.remove_book(title)

            elif choice == 3:
                title = input("조회할 책 제목: ")
                self.search_book(title)

            elif choice == 4:
                self.display_books()

            elif choice == 5:
                print("프로그램을 종료합니다.")
                break

            else:
                print("잘못된 메뉴 번호입니다. 다시 선택하세요.")
if __name__ == "__main__":
    bm = BookManagement()
    bm.run()
